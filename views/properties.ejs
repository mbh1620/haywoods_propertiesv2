        maxZoom: 18,
        id: 'mapbox.streets',
        accessToken: 'pk.eyJ1IjoibWJoMTYyMCIsImEiOiJjankwb244aWgwNHd1M2dsYWtkd2h2NWdwIn0.74tfwmTddrE7BpzyAA-0hw'
    }).addTo(mymap);
            <% properties.forEach(function (property) { %>
            var marker = new L.marker([<%= property.lat %>, <%= property.long %>]).addTo(mymap);
            <% }); %>

</script>


