<html>

<head>
  <!-- <link rel="stylesheet" href="/style.css"> -->
  
  <% if( typeof(property) !=='undefined' && typeof(images) !=='undefined' ){ %>
    <title>Haywood's Homes: <%= property.name %>, Leicester</title>
    <meta property="og:title" content="<%= property.name %>" />
    <meta property="og:url" content="haywoods-properties.azurewebsites.net" />
    <meta property="og:image" content="../uploads/<%= property.id %>/thumbnails/resized_for_share.png" />
    <% } else if(typeof(property) !=='undefined' && typeof(page) !== 'undefined'){ %>
      <title>Haywood's Homes: <%= page %></title>
    <%} else if( typeof(property)==='undefined' && typeof(page) !== 'undefined'){ %>
      <% if (page === "Home") { %>
        <title>Haywood's Homes</title>
      <% } else { %>
        <title>Haywood's Homes: <%= page %></title>
      <% } %>
    
      <script async src="https://www.googletagmanager.com/gtag/js?id=G-HGSKV5XQK1"></script>
        <script>
          window.dataLayer = window.dataLayer || [];
          function gtag(){dataLayer.push(arguments);}
          gtag('js', new Date());
        
          gtag('config', 'G-HGSKV5XQK1');
        </script>
    <% } %>
      <meta name="viewport" content="width=device-width, initial-scale=1">
      <meta name="description" content="Haywood's Homes, finding the perfect home for you in and around Leicester.">
      <meta name="robots" content="Haywood's Homes, finding the perfect home for you in and around Leicester.">
      <meta name="keywords"
        content="Rent, Homes for rent, Houses for let, Houses for rent, Houses for rent in Leicester, letting, Letting, Leicester, Leicester, Haywood, Rental, Properties, Property, terraced houses, City Center">
      <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.9.0/css/all.css"
        integrity="sha384-i1LQnF23gykqWXg6jxC2ZbCbUMxyw5gLZY6UiUS98LYV5unm8GWmfkIS6jqJfb4E" crossorigin="anonymous">
      <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css"
        integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
</head>

<body>
  <div id="main" style="height:auto;
      min-height: 100vh;">

    <nav class="navbar navbar-expand-lg bg-dark">
      <a class="navbar-brand text-light" href="/"><i class="fas fa-home"></i> Haywood's Homes</a>
      <button class="navbar-toggler navbar-dark" type="button" data-toggle="collapse"
        data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false"
        aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>

      <div class="collapse navbar-collapse" id="navbarSupportedContent">
        <ul class="navbar-nav mr-auto">

        </ul>
        <% if(!currentUser){ %>
          <form class="form-inline my-2 my-lg-0" action="/register">
            <button class="btn btn-outline-warning my-2 my-sm-0" type="submit">Sign up</button>
          </form>
          <form class="form-inline my-2 my-lg-0" action="/login">
            <button class="btn btn-outline-success my-2 my-sm-0" type="submit">Login</button>
          </form>
          <% } else { %>
            <div class="" id="navbarSupportedContent">
              <ul style="float:right" class="navbar-nav">


                <li class="nav-item dropdown text-light">
                  <a class="nav-link dropdown-toggle text-light" href="#" id="navbarDropdown" role="button"
                    data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                    Logged in as <%= currentUser.username %>
                  </a>
                  <div class="dropdown-menu" aria-labelledby="navbarDropdown">
                    <a class="dropdown-item" href="/user/<%=currentUser._id%>/properties">My Properties</a>
                    <a class="dropdown-item" href="/user/<%=currentUser._id%>">Account Settings</a>
                    <a class="dropdown-item" href="/user/<%=currentUser._id%>/manage">Manage</a>
                    <a class="dropdown-item" href="#">Analytics</a>
                    <a class="dropdown-item" href="#">Messages</a>
                    <form class="dropdown-item form-inline my-2 my-lg-0" action="/logout" method="POST">
                      <button class="btn btn-outline-danger my-2 my-sm-0" type="submit">Logout</button>
                    </form>
                  </div>
                </li>

              </ul>
              <% } %>
            </div>
    </nav>